<!DOCTYPE html>
<html>

<head>
    <title>Unfinished Todo</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>
    <h1>Unfinished Todo</h1>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="/todo">Home</a>
                <a class="nav-item nav-link active" href="/todo/unfinished">Unfinished Todos<span
                        class="sr-only">(current)</span></a>
            </div>
        </div>
    </nav>
    <table class="table table">
        <thead>
            <tr>
                <th scope="col">Delete</th>
                <th scope="col">Edit</th>
                <th scope="col">Todo</th>
                <th scope="col">Date begin</th>
                <th scope="col">Date end</th>
                <th scope="col">Status</th>
                <th scope="col">Tags</th>
            </tr>
        </thead>
        <tbody>
            <% todolist.forEach(function(todo) { %>
            <tr>
                <td><a href="/todo/delete/<%= todo.id %>">❌</a></td>
                <td><a href="/todo/edit/<%= todo.id %>">✏️</a></td>
                <td><%= todo.title %></td>
                <td><%= todo.dateBegin %></td>
                <td><%= todo.dateEnd %></td>
                <td><%= todo.status %></td>
                <td><%= todo.tags %></td>
            </tr>

            <% }); %>
        </tbody>
    </table>

</body>

</html>